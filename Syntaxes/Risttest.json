{
  "fileTypes": [
    "rist"
  ],
  "name": "RistLang",
  "patterns": [
    {
      "match":
      "//.*",
      "name":
      "comment.line.double-slash"
    },
    {
      "match":
      "([\\d]*)",
      "name":
      "constant.numeric"
    },
    {
      "match":
      "(True|False)",
      "name":
      "constant.language"
    },
    {
      "match":
      "(print|input|int|str|bool|type|dict)",
      "name":
      "variable.language"
    },
    {
      "match":
      "((a fn \\=\\=\\> )?(define)|or|and|pass|return|break|while|for|in|continue|var|as(?=( ))|global|nonlocal|match|case|\\+@|@\\+|\\|\\||\\||__(//|\\>|\\<)|/|\\=|\\+|\\-|\\*|\\:|\\.\\.(\\.)?|\\;)",
      
      "name":
      "keyword.operator"
    },
    {
      "match":
      "([a-zA-Z0-9_]*(\\})|\\})",
      "name":
      "entity.name.function"
    },
    {
      "match":
      "((def(?!(ine))|from|import|async)|(.?(?!(;))$)(?\\<!(;)))",
      "name":
      "invalid.illegal"
    }
  ],
  "scopeName":
  "source.rist"
}
